<script>
  function checkid(){
    var dom=document.getElementById("intid").value;
    if(dom.search(/^DSCEINTERN@\d{4}$/)>=0){
      return true;
    }
      else{
        alert("THE FORMAT ENTERED MUST BE IN THE FORM DSCEINTERN@(follwed by a 4 digit no.)");
        return false;
      }
  }
</script>
