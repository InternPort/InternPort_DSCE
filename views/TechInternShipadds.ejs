  <body>
    <div>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href=" ">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTANru68lv_RvwoCGrK0-Pl4eusfAr94G2V1Lk2tiIcWyYqoPp_" style="display:inline-block; width:15%"/>
      <span style="display:inline-block; color: white;
      text-shadow: 2px 2px 4px #000000">InternPort DSCE </span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#lists" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="lists">
        <ul  class="navbar-nav ml-auto" >
         <li class="nav-item">
          <a class="nav-link" href="/addedInter/<%= email %>">Back to 
          <br/>My Added Internships Page</a>
         </li>
        </ul>
      </nav>
      </div>

    <div class="container">
    <div class="card">
      <h2 class="card-title">Add Internships</h2>
      <div class="card-body">
        <div>
          <form class="was-validated" action="/intadds/<%= email %>" method="POST">
            <div class="form-group">
              <label>Enter The Internship id:</label>
              <input type="text" name="id" placeholder="Ex DSCEINTERN@0001" id="intid" onchange="checkid()" class="form-control" required>
            </div>
            <div class="form-group">
              <label>Enter The Internship Name:</label>
              <input type="text" name="name"   class="form-control" required>
            </div>
            <div class="form-group">
              <label>Enter The Name of the Company Providing It:</label>
              <input type="text" name="company"  class="form-control" required>
            </div>
            <div class="form-group">
              <label>Enter the duration of Internship:</label>
              <input type="text" name="dur"  class="form-control" required>
            </div>
            <div class="form-group">
              <label>Type of Work</label>
              <input type="text" name="type"  class="form-control" required>
            </div>
            <div class="form-group">
              <label>Add the Skills Required:</label>
              <input type="text" name="skill"  class="form-control" placeholder="Add it like Java,Node,React" required>
            </div>
            <div class="form-group">
              <label>Stifund That You Will GET:</label>
              <input type="text" name="sti"  class="form-control" placeholder="add only if present else enter as unpaid" required>
            </div>
            <div class="form-group">
              <label>Daily Work Duration:</label>
              <input type="text" name="dail"  class="form-control" placeholder="part-time of fulltime" required>
            </div>
            <div class="form-group">
                 <label>Due Date For Application:</label>
                 <label style="color: brown;">Remember This is Only For the Students To Apply!</label>
                    <input data-date-format="dd/mm/yyyy" class="form-control" id="datepicker" name="duedate" required>
              </div>
          <script type="text/javascript">
            $('#datepicker').datepicker({
                weekStart: 1,
                daysOfWeekHighlighted: "6,0",
                autoclose: true,
                todayHighlight: true,
            });
            $('#datepicker').datepicker("setDate", new Date());
        </script>
     
          <button type="submit" class="btn btn-primary btn-block">Add Internship</button>
          </form>
        
        
      </div>
    </div>
  </div>
