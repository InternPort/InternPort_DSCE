  var dom1 = document.getElementById("cpassw");
	if(fir!=sec)
	{
	alert("Passwords Do not match");
	dom.value=null;
  dom1.value=null;
  dom.focus();
  dom.select();
	return false;
	}

	return true;

	}
	function confirmemail()
	{
	var fir=document.getElementById("email").value;
	var sec=document.getElementById("cemail").value;
	var dom=document.getElementById("email");
    var dom1 = document.getElementById("cemail");
	if(fir!=sec)
	{
