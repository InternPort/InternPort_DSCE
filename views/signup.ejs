		switch(desgn)
		{
			case "Student":
			if(usnid.search(/^1DS\d{2}CS\d{3}$/)>=0)

			return true;
			else{
				alert("USN not in proper format");
        dom.value=null;
				return false;
			}
			break;
			case "student":
			if(usnid.search(/^1DS\d{2}CS\d{3}$/)>=0)

			return true;
			else{
				alert("USN not in proper format");
      dom.value=null;
				return false;

		}
			break;
			default:
			return true;
		}

	}
	function checkpass()
	{
	var fir=document.getElementById("passw").value;
	var sec=document.getElementById("cpassw").value;
