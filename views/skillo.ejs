  <body>
    <div>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href=" ">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTANru68lv_RvwoCGrK0-Pl4eusfAr94G2V1Lk2tiIcWyYqoPp_" style="display:inline-block; width:15%"/>
      <span style="display:inline-block">InternPort DSCE </span>
      </a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#lists" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="lists">
      <ul  class="navbar-nav ml-auto" >
      
      <li class="nav-item">
       <a class="nav-link" href="/homeStudent/<%= usns %>">Go Back to home Page </a>
      </li>
      
      </ul>
      </div>
      </nav>
    </div>

    <form class="" action="/profile/skillset/<%= usns %>" method="post">
      <div class="card bg-danger text-white">
          <div class="card-body">
            <label for="usr">Add Skill:  <input type="text" name="skill" class="form-control"> </label>
          <div class="card-text ">
            <label for="usr">How Do You Rate Your Skill ?</label>
            <div >
              <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="customRadio1" name="types" value="Beginner">
                <label class="custom-control-label" for="customRadio1">Beginner</label>
              </div>
              <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="customRadio2" name="types" value="Intermediate">
                <label class="custom-control-label" for="customRadio2">Intermediate</label>
              </div>
              <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="customRadio3" name="types" value="Advanced">
                <label class="custom-control-label" for="customRadio3">Advanced</label>
              </div>
            </div>
          </div>
        </div>
          <button type="SUBMIT" class="btn btn-success ">+</button>
        </div>
        <br>
  
  </form>
    <% if (skills.length===0) { %>
      <div class="alert alert-danger alert-dismissible fade show">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong>You have Not Added Any Skills Yet</strong> 
        </div>
 <% }%>
      <% for(let i=0;i<skills.length;i++){ %>

        <div class="container">
            <ul class="list-group">
                <li class="list-group-item">
                    
                    <div class="card text-black">
                      <div class="card-header  bg-info">Skill</div>
                      <div class="card-body">
                        <div class="card-text"><%= skills[i].skill %></div>
                        <div class="card-text"><%= skills[i].type %></div>
                      </div>
                       
                      </div>
                      <br>
                </li>
            </ul>
    
    </div>

     <% } %>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
