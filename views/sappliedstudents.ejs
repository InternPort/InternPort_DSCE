        <div class="card-columns">
      <% for(let i=0;i<skills.length;i++){ %>
       
          <div class="card" style="width:260px">
            <div class="card-body">
                <form id="selection" action="/accepted/<%= idno %>/<%= skills[i] %>/<%= mail %>" method="POST"> 
                    <h4 class="card-title"> <label>USN: <%= skills[i] %></label>
                    </h4>
                    <p class="card-text">Click On See Profile to see the Profile of the student.</p>
                    <button type="submit" name="submit" class="btn btn-primary " id="select">Select</button>
                    <script>
                      $('form#selection').submit(function(){
                        $(this).find(':input[type=submit]').prop('disabled', true);
                        $(this).find(':input[type=submit]').text(function(i, text){
                             return text === "Select" ? "Selected" : "Select";
                            
                         })
                  
                      });
                    </script>
                    <a href="/studentDetail/<%= skills[i] %>/<%= mail %>" class="btn btn-primary">See Profile</a>
                  </form>
             
            </div>
          </div>
       
           
   
     <% } %>
