                <form action="/logintech" id="log" method="POST">
                    <h2>Welcome Teacher!</h2>
                <div class="form-group">
                    <i class="material-icons">&#xe7fd;</i>
                <label for="username">UserName:</label>
                <input type="text" placeholder="Enter UserName" class="form-control" id="username"  name="usern" required></input>
                <i style="font-size:24px" class="fa">&#xf023;</i>
                    <label for="password">Password:</label>
                <input type="password" placeholder="Enter password"  name="passwo" class="form-control" required></input>
               <br/>
            <div class="submit">
                    <button name="Submit" type="submit" class="btn btn-success btn-block">Login</button></div>
                <br/>
                <div class="buttons">
                    <button class="btn btn-danger">Forgot Password?</button>
                </div>
            </form>
